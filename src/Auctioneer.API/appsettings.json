{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "AuthDb": "<from-user-secrets>"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-025.grafana.net",
          "labels": [
            {
              "key": "app",
              "value": "Auctioneer.Api"
            }
          ],
          "propertiesAsLabels": [
            "app"
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "Sample"
    }
  },
  "AuctioneerDatabaseSettings": {
    "ConnectionString": "<from-user-secrets>",
    "DatabaseName": "Auctioneer",
    "MemberCollectionName": "Members",
    "AuctionCollectionName": "Auctions",
    "EventCollectionName": "Events"
  },
  "JWT": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:7298",
    "Secret": "<from-user-secrets>"
  },
  "CloudAMQP": {
    "Url": "<from-user-secrets>"
  },
  "CacheSettings": {
    "EvictionExpirationInMinutes": 10
  },
  "AllowedHosts": "*"
}
